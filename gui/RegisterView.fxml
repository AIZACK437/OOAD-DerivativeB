<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="bankingsystem.gui.RegisterController"
      alignment="CENTER" spacing="10" style="-fx-background-color: #f9f9f9;" prefWidth="400">
    <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

    <Label text="Register New Customer" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtFirstName" promptText="First Name" prefWidth="250"/>
    <TextField fx:id="txtLastName" promptText="Last Name" prefWidth="250"/>
    <TextField fx:id="txtAddress" promptText="Address" prefWidth="250"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Register" onAction="#onRegisterClicked"/>
        <Button text="Back to Menu" onAction="#onBackClicked"/>
    </HBox>

    <Label fx:id="lblStatus" textFill="green"/>
</VBox>
